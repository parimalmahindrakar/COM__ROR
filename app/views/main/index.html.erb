<div class="container mt-5">


<div class=" my-3 d-flex justify-content-between">

  <%= link_to "Add Customer", add_customer_path, class: "btn btn-info"%>
  <div class="btn btn-info ">Add Order</div>


</div>


<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">Sr. No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="address__of">Address</th>
      <th scope="col">Order Count</th>
      <th scope="col">Add Order</th>

    </tr>
  </thead>
  <tbody class="customer__infomations">
    


    <% @customer.each do |cust| %>

     <tr>
      <th scope="row"><%= cust.id %></th>
      <td> <a href=/show-customer/<%= cust.id %>> <%= cust.name%> </a> </td>
      <td><%= cust.email %> </td>
      <td>+91-<%= cust.phone %> </td>
      <td class="address__of"><%= cust.address %> </td>
      <td>21</td>
      <td> <a href="#"><i class="fa-solid fa-cart-plus"></i></a> </td>
    </tr>

    <% end %>





   

    
  </tbody>
</table>

</div>