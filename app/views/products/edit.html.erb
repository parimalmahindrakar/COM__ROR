<div class="container mt-5 w-50 border p-5 shadow">

    <h1 class="add__customer__heading mb-4">Update Product</h1>

    <%= form_for @product, url:update_product_path(@product.id), html: { method: :post } do |form| %>


        <% if @product.errors.any? %>
            <div class="alert alert-danger">
                <% @product.errors.full_messages.each do |message| %>
                <div>
                    <%= message %>
                </div>
                <% end %>
            </div>
        <% end %>




        <div class="mb-3">
            <%= form.label :companyname %>    
            <%= form.text_field :companyname, class: "form-control", value: @product.companyname %>
        </div>

        <div class="mb-3">
            <%= form.label :model %>    
            <%= form.text_field :model, class: "form-control", value: @product.model %>
        </div>

        <div class="mb-3">
            <%= form.label :device %>    
            <%= form.text_field :device, class: "form-control", value: @product.device %>
        </div>
        <div class="mb-3">
            <%= form.label :stock %>    
            <%= form.text_field :stock, class: "form-control", value: @product.stock %>
        </div>
        <div class="mb-3">
            <%= form.label :price %>    
            <%= form.text_field :price, class: "form-control", value: @product.price %>
        </div>



        <div class="w-100 text-center pt-3 d-flex justify-content-between align-items-center">
            <%= form.submit "Update Product" ,class: "btn btn-primary ml-5" %>
            <%= link_to "Go back",products_path%>
        </div>

        <div class="text-left pt-3">
        
        </div>


    <% end %>


</div>