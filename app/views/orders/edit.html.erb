<div class="container mt-5 w-50 border p-5 shadow">

    <h1 class="add__customer__heading mb-4">Update Order</h1>

    <%= form_for @order, url:update_order_path(@order.id), html: { method: :post } do |form| %>


        <% if @order.errors.any? %>
            <div class="alert alert-danger">
                <% @order.errors.full_messages.each do |message| %>
                <div>
                    <%= message  %>
                </div>
                <% end %>
            </div>
        <% end %>




        <div class="mb-3">
            <%= form.label :customer_id %>     <br>
            <%= form.select :customer_id, Customer.all.collect{|cust| [cust.name, cust.id]}, include_blank:true, class: 'form-select' %>
        </div>


        <div class="mb-3">
            <%= form.label :product_id %>   <br>
            <%= form.select :product_id, Product.all.collect{|product| [product.companyname+" " +product.model, product.id]}, include_blank:true, class: 'form-select' %>
        </div>


        <div class="mb-3">
            <%= form.label :quantity %>    
           <%= form.number_field :quantity, class: "form-control", placeholder: "10" %>
        </div>

        <div class="mb-3">
            <%= form.label :status %>    
          <%= form.select :status, [["Pending", "Pending"], ["Completed","Completed"]], class: 'form-select' %>

        </div>


        <div class="w-100 text-center pt-3 d-flex justify-content-between align-items-center">
            <%= form.submit "Update Order" ,class: "btn btn-primary ml-5" %>
            <%= link_to "Go Back", orders_path, class: "btn btn-primary"%>
        </div>

        <div class="text-left pt-3">
        
        </div>


    <% end %>


</div>